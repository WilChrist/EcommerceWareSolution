<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        @{ var ii = 0;}
                        @foreach (var item in Model.ProductsCaroussel)
                        {
                            ii++;
                            string c;
                            if (item.IdProduct == 1) { c = "item active"; } else { c = "item"; }
                            <div class="@c">
                                <div class="col-sm-6">
                                    <h1>@item.Name_Product </h1>
                                    <h2>Cost Price : @item.Net_Price $</h2>
                                    <p>@item.Description_Product </p>
                                    <button type="button" class="btn btn-default get">Get it now</button>
                                </div>
                                <div class="col-sm-6">
                                    <img src="@item.Image_Url" class="girl img-responsive" alt="" />
                                    <div>
                                        <span class="pricingr"></span>
                                        <span class="pricingo"></span>
                                        <span class="pricingg"><s>@{var ppr = Convert.ToInt32(@item.Gross_Price);} @ppr$</s> <br />@{var pr = Convert.ToInt32(@item.Net_Price);} @pr$ </span>
                                    </div>
                                </div>
                            </div>
                                                if (ii >= 3) { break; }

                                            }

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section><!--/slider-->

